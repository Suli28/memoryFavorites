/* pages/tips/tips.wxss */
#editor{
  width: 100%;
  height: 100%;
  padding: 10px;
  background-color: white;
  border-top: 1rpx solid #ddd;

  font-size: 32rpx;
}

.btns{
  width: 100%;
  height: 80rpx;
  /* background-color: lightcoral; */

  position: fixed;
  left: 0;
  bottom: 10px;

  display: flex;
  justify-content: space-around;
  align-items: center;
}
.btns>view{
  width: 50rpx;
  font-size: 45rpx;
  text-align: center;
  font-weight: bold;
}
.btns>image:nth-child(3){
  width: 38rpx;
  height: 38rpx;
}
.btns>image{
    width: 50rpx;
    height: 50rpx;
}

button{
  position: fixed;
  top: 50%;
  left: 50%;
}